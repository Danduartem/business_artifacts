{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agent-tools/schemas/tool-result.schema.json",
  "title": "Tool Result",
  "description": "Standard schema for tool execution results",
  "type": "object",
  "required": ["success", "tool", "timestamp"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether the tool executed successfully"
    },
    "tool": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Tool identifier"
        },
        "name": {
          "type": "string",
          "description": "Tool name"
        },
        "version": {
          "type": "string",
          "description": "Tool version"
        },
        "action": {
          "type": "string",
          "description": "Action performed"
        }
      }
    },
    "data": {
      "description": "Result data (schema varies by tool)",
      "oneOf": [
        { "type": "object" },
        { "type": "array" },
        { "type": "string" },
        { "type": "number" },
        { "type": "boolean" },
        { "type": "null" }
      ]
    },
    "error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "Error code"
        },
        "message": {
          "type": "string",
          "description": "Error message"
        },
        "stack": {
          "type": "string",
          "description": "Stack trace"
        },
        "details": {
          "type": "object",
          "description": "Additional error details"
        }
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "description": "Non-fatal warnings"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "duration": {
          "type": "number",
          "description": "Execution duration in milliseconds"
        },
        "retries": {
          "type": "integer",
          "description": "Number of retries"
        },
        "cached": {
          "type": "boolean",
          "description": "Whether result was cached"
        },
        "agentId": {
          "type": "string",
          "description": "Agent that executed the tool"
        },
        "sessionId": {
          "type": "string",
          "description": "Session identifier"
        },
        "correlationId": {
          "type": "string",
          "description": "Correlation ID for tracing"
        }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Execution timestamp"
    },
    "inputs": {
      "type": "object",
      "description": "Input parameters used"
    },
    "outputs": {
      "type": "object",
      "description": "Output files or artifacts generated",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "size": {
                "type": "integer"
              }
            }
          }
        },
        "urls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  }
}
