{
  "category": "http",
  "layer": "primitives",
  "description": "HTTP request atomic operations",
  "tools": [
    {
      "id": "get",
      "when": "Make HTTP GET request",
      "path": "capabilities/primitives/http/get.js",
      "flags": ["--url", "--headers"],
      "example": "node capabilities/primitives/http/get.js --url 'https://api.example.com/data'"
    },
    {
      "id": "post",
      "when": "Make HTTP POST request",
      "path": "capabilities/primitives/http/post.js",
      "flags": ["--url", "--data", "--headers"],
      "example": "node capabilities/primitives/http/post.js --url 'https://api.example.com/create' --data '{\"key\":\"value\"}'"
    },
    {
      "id": "download",
      "when": "Download file from HTTP/HTTPS URL",
      "path": "capabilities/primitives/http/download.js",
      "flags": ["--url", "--output"],
      "example": "node capabilities/primitives/http/download.js --url 'https://example.com/file.pdf' --output file.pdf"
    }
  ],
  "help": "All primitives support --help flag for detailed parameter information"
}
