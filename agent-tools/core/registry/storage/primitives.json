{
  "category": "storage",
  "description": "Atomic storage operations",
  "tools": [
    {
      "id": "storage.airtable-batch",
      "when": "Create multiple records in an Airtable table (max 10 per batch)",
      "path": "capabilities/primitives/storage/airtable-batch.js",
      "flags": [
        "table",
        "records",
        "api-key",
        "base-id"
      ],
      "capabilities": [
        "airtable-batch"
      ]
    },
    {
      "id": "storage.airtable-create",
      "when": "Create a single record in an Airtable table",
      "path": "capabilities/primitives/storage/airtable-create.js",
      "flags": [
        "table",
        "fields",
        "api-key",
        "base-id"
      ],
      "capabilities": [
        "airtable-create"
      ]
    },
    {
      "id": "storage.airtable-query",
      "when": "Query records from an Airtable table",
      "path": "capabilities/primitives/storage/airtable-query.js",
      "flags": [
        "table",
        "formula",
        "max-records",
        "sort",
        "fields",
        "api-key",
        "base-id"
      ],
      "capabilities": [
        "airtable-query"
      ]
    },
    {
      "id": "storage.airtable-update",
      "when": "Update an existing record in an Airtable table",
      "path": "capabilities/primitives/storage/airtable-update.js",
      "flags": [
        "table",
        "record-id",
        "fields",
        "api-key",
        "base-id"
      ],
      "capabilities": [
        "airtable-update"
      ]
    },
    {
      "id": "storage.notion-create",
      "when": "Create a new page in a Notion database",
      "path": "capabilities/primitives/storage/notion-create.js",
      "flags": [
        "database-id",
        "properties",
        "api-key"
      ],
      "capabilities": [
        "notion-create"
      ]
    },
    {
      "id": "storage.notion-query",
      "when": "Query pages from a Notion database",
      "path": "capabilities/primitives/storage/notion-query.js",
      "flags": [
        "database-id",
        "filter",
        "sorts",
        "limit",
        "api-key"
      ],
      "capabilities": [
        "notion-query"
      ]
    },
    {
      "id": "storage.notion-update",
      "when": "Update an existing Notion page",
      "path": "capabilities/primitives/storage/notion-update.js",
      "flags": [
        "page-id",
        "properties",
        "api-key"
      ],
      "capabilities": [
        "notion-update"
      ]
    }
  ]
}