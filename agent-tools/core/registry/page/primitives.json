{
  "category": "page",
  "description": "Atomic page operations",
  "tools": [
    {
      "id": "page.click",
      "when": "Click an element by CSS selector",
      "path": "capabilities/primitives/page/click.js",
      "flags": [
        "selector",
        "wait"
      ],
      "capabilities": [
        "click"
      ]
    },
    {
      "id": "page.extract-html",
      "when": "Extract HTML content from CSS selector",
      "path": "capabilities/primitives/page/extract-html.js",
      "flags": [
        "selector",
        "all",
        "outer"
      ],
      "capabilities": [
        "extract-html"
      ]
    },
    {
      "id": "page.extract-text",
      "when": "Extract text content from CSS selector",
      "path": "capabilities/primitives/page/extract-text.js",
      "flags": [
        "selector",
        "all"
      ],
      "capabilities": [
        "extract-text"
      ]
    },
    {
      "id": "page.screenshot",
      "when": "Capture screenshot of page or element",
      "path": "capabilities/primitives/page/screenshot.js",
      "flags": [
        "path",
        "selector",
        "fullpage"
      ],
      "capabilities": [
        "screenshot"
      ]
    },
    {
      "id": "page.scroll",
      "when": "Scroll page to position or element",
      "path": "capabilities/primitives/page/scroll.js",
      "flags": [
        "to",
        "selector",
        "y"
      ],
      "capabilities": [
        "scroll"
      ]
    },
    {
      "id": "page.wait-for",
      "when": "Wait for CSS selector to appear on page",
      "path": "capabilities/primitives/page/wait-for.js",
      "flags": [
        "selector",
        "timeout",
        "visible"
      ],
      "capabilities": [
        "wait-for"
      ]
    }
  ]
}