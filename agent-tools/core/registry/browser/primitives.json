{
  "category": "browser",
  "description": "Atomic browser operations",
  "tools": [
    {
      "id": "browser.close",
      "when": "Close the browser instance or specific tab",
      "path": "capabilities/primitives/browser/close.js",
      "flags": [
        "tab-only"
      ],
      "capabilities": [
        "close"
      ]
    },
    {
      "id": "browser.cookies",
      "when": "Get or set browser cookies",
      "path": "capabilities/primitives/browser/cookies.js",
      "flags": [
        "get",
        "set",
        "name",
        "value",
        "domain"
      ],
      "capabilities": [
        "cookies"
      ]
    },
    {
      "id": "browser.eval",
      "when": "Execute JavaScript code in browser context",
      "path": "capabilities/primitives/browser/eval.js",
      "flags": [
        "code"
      ],
      "capabilities": [
        "eval"
      ]
    },
    {
      "id": "browser.navigate",
      "when": "Navigate to a URL in the current or new tab",
      "path": "capabilities/primitives/browser/navigate.js",
      "flags": [
        "url",
        "new-tab",
        "wait-until"
      ],
      "capabilities": [
        "navigate"
      ]
    },
    {
      "id": "browser.start",
      "when": "Launch Chrome with debugging enabled",
      "path": "capabilities/primitives/browser/start.js",
      "flags": [
        "param"
      ],
      "capabilities": [
        "start"
      ]
    }
  ]
}