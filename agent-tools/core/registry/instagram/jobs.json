{
  "category": "instagram",
  "layer": "jobs",
  "description": "Long-running Instagram extraction jobs with checkpointing and resume capability",
  "tools": [
    {
      "id": "complete-profile-extraction",
      "when": "Extract Instagram posts with full metadata, media downloads, and video transcription from a single profile",
      "path": "capabilities/jobs/instagram/complete-profile-extraction.js",
      "runtime": "1-8 hours",
      "features": ["Checkpointing", "Resume (--resume)", "Transcription", "Chrome profile sync", "Dry-run validation"],
      "flags": ["--username", "--start-date", "--end-date", "--profile", "--transcribe", "--resume", "--dry-run", "--max-scrolls", "--urls-file", "--skip-url-extraction"],
      "example": "node capabilities/jobs/instagram/complete-profile-extraction.js --username berudolph --start-date 2025-11-01 --end-date 2025-11-30 --profile --resume"
    },
    {
      "id": "bulk-content-extraction",
      "when": "Process multiple Instagram profiles simultaneously with transcription and export to multiple formats",
      "path": "capabilities/jobs/instagram/bulk-content-extraction.js",
      "runtime": "3-13 hours",
      "features": ["Multi-profile support", "Multiple output formats", "Resume capability", "Dry-run validation", "Stage-based checkpointing"],
      "flags": ["--profiles", "--start-date", "--end-date", "--output-format", "--include-stories", "--resume", "--dry-run"],
      "example": "node capabilities/jobs/instagram/bulk-content-extraction.js --profiles '[\"user1\",\"user2\"]' --start-date 2025-11-01 --end-date 2025-11-30 --output-format json"
    },
    {
      "id": "process-existing-urls",
      "when": "Already have a list of Instagram URLs and just need to extract full post metadata",
      "path": "capabilities/jobs/instagram/process-existing-urls.js",
      "runtime": "30 minutes - 2 hours",
      "features": ["No profile scraping", "Reads from file", "Progress tracking"],
      "flags": ["--input", "--output"],
      "example": "node capabilities/jobs/instagram/process-existing-urls.js --input urls.json --output posts.json"
    }
  ],
  "help": "All jobs support --help flag for detailed parameter information"
}
