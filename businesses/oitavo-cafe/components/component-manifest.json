{
  "$schema": "component-manifest-v1",
  "version": "2.0.0",
  "brand": "Oitavo Café",
  "description": "Premium UI component library for Oitavo Café - Brazilian marketing agency with coffee theme. Warm terracotta/burgundy palette, supports light/dark modes.",
  "designTokens": {
    "colors": {
      "primary": "#4E130D (Coffee/Burgundy)",
      "secondary": "#7A1307 (Dark Red-Brown)",
      "accent": "#A1523C (Terracotta)",
      "neutral": "#F8E8D8 (Warm Cream)"
    },
    "fonts": {
      "display": "Hartwell",
      "body": "DIN Pro"
    }
  },
  "categories": {
    "core": ["Button", "Input", "Textarea", "Card", "Alert", "Badge", "Modal", "Avatar", "Table"],
    "feedback": ["Progress", "CircularProgress", "FunnelProgress", "Skeleton"],
    "data-display": ["StatCard", "DashboardKPICard", "GradeBadge", "ScoreRing", "InsightCard"],
    "charts": ["DonutChart", "LineChart", "VerticalBarChart", "HorizontalBarChart", "RadarChart", "EngagementHeatmap"],
    "analytics": ["MetricColumn", "IndicatorTable", "EngagementRateCard", "ComparisonCard", "TopContentGrid", "ViralDistribution", "ProfileHeader", "AccountCard"]
  },
  "components": {
    "Button": {
      "path": "ui/Button.tsx",
      "description": "Primary action trigger with loading states and icon support",
      "category": "core",
      "props": {
        "variant": {
          "type": "enum",
          "options": ["primary", "secondary", "accent", "ghost", "destructive"],
          "default": "primary",
          "description": "Visual style - primary for CTAs, secondary for outline, ghost for minimal, destructive for dangerous actions"
        },
        "size": {
          "type": "enum",
          "options": ["sm", "md", "lg"],
          "default": "md"
        },
        "isLoading": {
          "type": "boolean",
          "default": false,
          "description": "Shows spinner and disables button"
        },
        "loadingText": {
          "type": "string",
          "description": "Text while loading (optional, defaults to children)"
        },
        "leftIcon": {
          "type": "ReactNode",
          "description": "Icon before text"
        },
        "rightIcon": {
          "type": "ReactNode",
          "description": "Icon after text"
        },
        "disabled": {
          "type": "boolean",
          "default": false
        }
      },
      "examples": [
        {
          "name": "Primary CTA",
          "code": "<Button variant=\"primary\">Quero agendar</Button>",
          "useCase": "Main form submissions, primary page actions"
        },
        {
          "name": "Secondary outline",
          "code": "<Button variant=\"secondary\" size=\"sm\">Saiba mais</Button>",
          "useCase": "Secondary actions, cancel buttons"
        },
        {
          "name": "Loading state",
          "code": "<Button isLoading loadingText=\"Processando...\">Enviar</Button>",
          "useCase": "Async operations"
        },
        {
          "name": "With icon",
          "code": "<Button leftIcon={<PlusIcon />}>Adicionar</Button>",
          "useCase": "Actions with visual reinforcement"
        },
        {
          "name": "Destructive",
          "code": "<Button variant=\"destructive\">Excluir conta</Button>",
          "useCase": "Dangerous/irreversible actions"
        }
      ],
      "useWhen": ["Form submissions", "CTAs", "Primary page actions", "Confirmations"],
      "dontUseWhen": ["Navigation (use Link)", "Toggle states (use Switch)", "Icon-only actions (use IconButton)"],
      "accessibility": "Includes focus ring, disabled states, loading announces to screen readers"
    },

    "Input": {
      "path": "ui/Input.tsx",
      "description": "Text input with label, hint, error states, and icon support",
      "category": "core",
      "props": {
        "label": {
          "type": "string",
          "description": "Label text above input"
        },
        "hint": {
          "type": "string",
          "description": "Helper text below input"
        },
        "error": {
          "type": "string",
          "description": "Error message - shows error styling when set"
        },
        "leftIcon": {
          "type": "ReactNode",
          "description": "Icon at start of input"
        },
        "rightIcon": {
          "type": "ReactNode",
          "description": "Icon at end of input"
        },
        "type": {
          "type": "string",
          "default": "text",
          "description": "HTML input type"
        }
      },
      "examples": [
        {
          "name": "Basic with label",
          "code": "<Input label=\"Email\" type=\"email\" placeholder=\"seu@email.com\" />"
        },
        {
          "name": "With error",
          "code": "<Input label=\"Telefone\" error=\"Formato inválido\" />"
        },
        {
          "name": "With hint",
          "code": "<Input label=\"Email\" hint=\"Nunca compartilhamos seu email.\" />"
        },
        {
          "name": "With icon",
          "code": "<Input leftIcon={<SearchIcon />} placeholder=\"Buscar...\" />"
        }
      ],
      "useWhen": ["Forms", "Search fields", "Single-line text entry"],
      "dontUseWhen": ["Multi-line text (use Textarea)", "Selections (use Select)"],
      "accessibility": "Auto-generates IDs, aria-describedby for hints/errors, aria-invalid for errors"
    },

    "Textarea": {
      "path": "ui/Input.tsx",
      "description": "Multi-line text input with same styling as Input",
      "category": "core",
      "props": {
        "label": { "type": "string" },
        "hint": { "type": "string" },
        "error": { "type": "string" }
      },
      "examples": [
        {
          "name": "Message field",
          "code": "<Textarea label=\"Mensagem\" placeholder=\"Conte-nos sobre seu projeto...\" />"
        }
      ],
      "useWhen": ["Comments", "Messages", "Long-form text"],
      "dontUseWhen": ["Single-line text (use Input)"]
    },

    "Card": {
      "path": "ui/Card.tsx",
      "description": "Content container with header, body, footer sections",
      "category": "core",
      "subComponents": ["CardHeader", "CardTitle", "CardDescription", "CardContent", "CardFooter"],
      "props": {
        "variant": {
          "type": "enum",
          "options": ["default", "featured", "interactive"],
          "default": "default",
          "description": "default=standard, featured=gradient+larger shadow, interactive=hover lift effect"
        }
      },
      "examples": [
        {
          "name": "Basic card",
          "code": "<Card>\n  <CardHeader>\n    <CardTitle>Título</CardTitle>\n    <CardDescription>Descrição</CardDescription>\n  </CardHeader>\n  <CardContent>\n    <p>Conteúdo do card</p>\n  </CardContent>\n  <CardFooter>\n    <Button>Ação</Button>\n  </CardFooter>\n</Card>"
        },
        {
          "name": "Featured pricing card",
          "code": "<Card variant=\"featured\">...</Card>"
        },
        {
          "name": "Clickable card",
          "code": "<Card variant=\"interactive\" onClick={handleClick}>...</Card>"
        }
      ],
      "useWhen": ["Content grouping", "Pricing tables", "Feature highlights", "Dashboard widgets"],
      "dontUseWhen": ["Metrics display (use StatCard)", "Alerts/notifications (use Alert)"]
    },

    "Alert": {
      "path": "ui/Alert.tsx",
      "description": "Notification banners with semantic variants and dismiss",
      "category": "core",
      "props": {
        "variant": {
          "type": "enum",
          "options": ["success", "warning", "error", "info"],
          "default": "info"
        },
        "title": {
          "type": "string",
          "description": "Optional bold header"
        },
        "showIcon": {
          "type": "boolean",
          "default": true
        },
        "dismissible": {
          "type": "boolean",
          "default": false
        },
        "onDismiss": {
          "type": "function"
        }
      },
      "examples": [
        {
          "name": "Success",
          "code": "<Alert variant=\"success\" title=\"Feito. Sem enrolação.\">\n  Sua mensagem foi enviada com sucesso.\n</Alert>"
        },
        {
          "name": "Error dismissible",
          "code": "<Alert variant=\"error\" dismissible onDismiss={() => setShow(false)}>\n  Algo deu errado. Já estamos vendo.\n</Alert>"
        }
      ],
      "useWhen": ["Form feedback", "System notifications", "Validation errors", "Success confirmations"],
      "dontUseWhen": ["Inline tips (use InsightCard)", "Toast notifications (use toast)"]
    },

    "Badge": {
      "path": "ui/Badge.tsx",
      "description": "Labels, tags, and status indicators",
      "category": "core",
      "props": {
        "variant": {
          "type": "enum",
          "options": ["default", "primary", "secondary", "accent", "success", "warning", "error", "info", "outline"],
          "default": "default"
        },
        "size": {
          "type": "enum",
          "options": ["sm", "md", "lg"],
          "default": "md"
        },
        "icon": {
          "type": "ReactNode",
          "description": "Icon before text"
        }
      },
      "examples": [
        {
          "name": "Status badges",
          "code": "<Badge variant=\"success\">Ativo</Badge>\n<Badge variant=\"error\">Urgente</Badge>\n<Badge variant=\"accent\" size=\"lg\">Novo</Badge>"
        }
      ],
      "useWhen": ["Status indicators", "Tags/categories", "Labels", "Counts"],
      "dontUseWhen": ["Grades (use GradeBadge)", "Buttons (use Button)"]
    },

    "Modal": {
      "path": "ui/Modal.tsx",
      "description": "Dialog overlay with header, body, footer sections",
      "category": "core",
      "subComponents": ["ModalHeader", "ModalTitle", "ModalDescription", "ModalBody", "ModalFooter"],
      "props": {
        "isOpen": {
          "type": "boolean",
          "required": true
        },
        "onClose": {
          "type": "function",
          "required": true
        },
        "size": {
          "type": "enum",
          "options": ["sm", "md", "lg", "xl", "full"],
          "default": "md"
        },
        "closeOnBackdropClick": {
          "type": "boolean",
          "default": true
        },
        "closeOnEscape": {
          "type": "boolean",
          "default": true
        }
      },
      "examples": [
        {
          "name": "Confirmation modal",
          "code": "<Modal isOpen={isOpen} onClose={() => setIsOpen(false)}>\n  <ModalHeader onClose={() => setIsOpen(false)}>\n    <ModalTitle>Confirmar ação</ModalTitle>\n  </ModalHeader>\n  <ModalBody>\n    <p>Tem certeza?</p>\n  </ModalBody>\n  <ModalFooter>\n    <Button variant=\"ghost\" onClick={() => setIsOpen(false)}>Cancelar</Button>\n    <Button variant=\"primary\">Confirmar</Button>\n  </ModalFooter>\n</Modal>"
        }
      ],
      "useWhen": ["Confirmations", "Forms in context", "Detail views", "Settings"],
      "dontUseWhen": ["Simple alerts (use Alert)", "Side panels (use Drawer)"],
      "accessibility": "Traps focus, closes on Escape, prevents body scroll"
    },

    "Avatar": {
      "path": "ui/Avatar.tsx",
      "description": "User profile image/initials with status indicator",
      "category": "core",
      "subComponents": ["AvatarGroup"],
      "props": {
        "src": {
          "type": "string",
          "description": "Image URL"
        },
        "alt": {
          "type": "string"
        },
        "initials": {
          "type": "string",
          "description": "Fallback initials (e.g., 'MC')"
        },
        "name": {
          "type": "string",
          "description": "Full name - auto-generates initials"
        },
        "size": {
          "type": "enum",
          "options": ["xs", "sm", "md", "lg", "xl", "2xl"],
          "default": "md"
        },
        "shape": {
          "type": "enum",
          "options": ["circle", "square"],
          "default": "circle"
        },
        "variant": {
          "type": "enum",
          "options": ["default", "primary", "secondary", "neutral", "outline"],
          "default": "default"
        },
        "status": {
          "type": "enum",
          "options": ["online", "offline", "busy", "away"],
          "description": "Shows colored dot indicator"
        },
        "interactive": {
          "type": "boolean",
          "default": false,
          "description": "Makes avatar clickable with hover ring"
        }
      },
      "examples": [
        {
          "name": "With image",
          "code": "<Avatar src=\"/user.jpg\" alt=\"John Doe\" />"
        },
        {
          "name": "From name",
          "code": "<Avatar name=\"Marina Costa\" />"
        },
        {
          "name": "With status",
          "code": "<Avatar name=\"John\" status=\"online\" />"
        },
        {
          "name": "Avatar group",
          "code": "<AvatarGroup max={3}>\n  <Avatar name=\"Alice\" />\n  <Avatar name=\"Bob\" />\n  <Avatar name=\"Charlie\" />\n  <Avatar name=\"Diana\" />\n</AvatarGroup>"
        }
      ],
      "useWhen": ["User profiles", "Comments", "Team lists", "Account menus"],
      "dontUseWhen": ["Logo display", "Generic images"]
    },

    "Table": {
      "path": "ui/Table.tsx",
      "description": "Data table with sorting, striping, hover states",
      "category": "core",
      "subComponents": ["TableHeader", "TableBody", "TableFooter", "TableRow", "TableHead", "TableCell", "TableCaption", "TableEmpty", "TableCheck", "TableX"],
      "props": {
        "variant": {
          "type": "enum",
          "options": ["default", "bordered", "minimal"],
          "default": "default"
        },
        "striped": {
          "type": "boolean",
          "default": false
        },
        "hoverable": {
          "type": "boolean",
          "default": true
        },
        "compact": {
          "type": "boolean",
          "default": false
        }
      },
      "examples": [
        {
          "name": "Basic table",
          "code": "<Table>\n  <TableHeader>\n    <TableRow>\n      <TableHead>Name</TableHead>\n      <TableHead>Status</TableHead>\n    </TableRow>\n  </TableHeader>\n  <TableBody>\n    <TableRow>\n      <TableCell>John Doe</TableCell>\n      <TableCell>Active</TableCell>\n    </TableRow>\n  </TableBody>\n</Table>"
        },
        {
          "name": "Comparison table",
          "code": "<TableCell><TableCheck /></TableCell>\n<TableCell><TableX /></TableCell>"
        }
      ],
      "useWhen": ["Data listings", "Comparison tables", "Admin interfaces"],
      "dontUseWhen": ["Metrics (use IndicatorTable)", "Simple lists (use ul/ol)"]
    },

    "StatCard": {
      "path": "ui/StatCard.tsx",
      "description": "Dashboard metric card with value, trend, and optional icon",
      "category": "data-display",
      "subComponents": ["StatCardGrid", "LiveBadge"],
      "props": {
        "label": {
          "type": "string",
          "required": true,
          "description": "Metric name (e.g., 'Leads', 'Revenue')"
        },
        "value": {
          "type": "string | number",
          "required": true
        },
        "change": {
          "type": "string",
          "description": "Change indicator (e.g., '+23%')"
        },
        "changeType": {
          "type": "enum",
          "options": ["positive", "negative", "neutral"],
          "default": "neutral"
        },
        "showTrend": {
          "type": "boolean",
          "default": true,
          "description": "Show trend arrow icon"
        },
        "variant": {
          "type": "enum",
          "options": ["default", "highlight", "outline", "ghost"],
          "default": "default"
        },
        "size": {
          "type": "enum",
          "options": ["sm", "md", "lg"],
          "default": "md"
        },
        "icon": {
          "type": "ReactNode"
        },
        "loading": {
          "type": "boolean",
          "default": false
        }
      },
      "examples": [
        {
          "name": "Basic metric",
          "code": "<StatCard label=\"Leads\" value=\"127\" change=\"+23%\" changeType=\"positive\" />"
        },
        {
          "name": "Highlighted ROI",
          "code": "<StatCard label=\"ROI\" value=\"3.2x\" change=\"Retorno\" variant=\"highlight\" />"
        },
        {
          "name": "Grid layout",
          "code": "<StatCardGrid columns={4}>\n  <StatCard label=\"Leads\" value=\"127\" />\n  <StatCard label=\"Vendas\" value=\"12\" />\n  <StatCard label=\"ROI\" value=\"3.2x\" variant=\"highlight\" />\n</StatCardGrid>"
        }
      ],
      "utilities": {
        "LiveBadge": "Pulsing indicator for real-time data - <LiveBadge status=\"live\" />"
      },
      "useWhen": ["Dashboards", "KPI displays", "Summary metrics"],
      "dontUseWhen": ["Detailed data (use Table)", "Charts"]
    },

    "Progress": {
      "path": "ui/Progress.tsx",
      "description": "Linear progress bar with color and animation options",
      "category": "feedback",
      "props": {
        "value": {
          "type": "number",
          "required": true,
          "description": "Progress value (0-100)"
        },
        "max": {
          "type": "number",
          "default": 100
        },
        "size": {
          "type": "enum",
          "options": ["xs", "sm", "md", "lg", "xl"],
          "default": "md"
        },
        "color": {
          "type": "enum",
          "options": ["primary", "secondary", "accent", "success", "warning", "error", "gradient"],
          "default": "accent"
        },
        "animated": {
          "type": "boolean",
          "default": false,
          "description": "Show shimmer animation"
        },
        "showLabel": {
          "type": "boolean",
          "default": false
        }
      },
      "examples": [
        {
          "name": "Basic",
          "code": "<Progress value={60} />"
        },
        {
          "name": "With label",
          "code": "<Progress value={75} showLabel />"
        },
        {
          "name": "Gradient animated",
          "code": "<Progress value={65} color=\"gradient\" size=\"lg\" animated />"
        }
      ],
      "useWhen": ["Loading states", "Completion tracking", "Upload progress"],
      "dontUseWhen": ["Scores (use ScoreRing)", "Funnels (use FunnelProgress)"]
    },

    "CircularProgress": {
      "path": "ui/Progress.tsx",
      "description": "Circular/radial progress indicator",
      "category": "feedback",
      "props": {
        "value": { "type": "number", "required": true },
        "size": {
          "type": "enum",
          "options": ["sm", "md", "lg", "xl"],
          "default": "md"
        },
        "color": {
          "type": "enum",
          "options": ["primary", "secondary", "accent", "success", "warning", "error"],
          "default": "accent"
        },
        "showLabel": { "type": "boolean", "default": false },
        "label": { "type": "ReactNode" }
      },
      "examples": [
        {
          "name": "With percentage",
          "code": "<CircularProgress value={75} showLabel />"
        }
      ],
      "useWhen": ["Compact progress display", "Loading indicators"],
      "dontUseWhen": ["Scores (use ScoreRing)"]
    },

    "FunnelProgress": {
      "path": "ui/Progress.tsx",
      "description": "Funnel visualization for conversion tracking",
      "category": "feedback",
      "props": {
        "steps": {
          "type": "FunnelStep[]",
          "required": true,
          "description": "Array of { label, value, color? }"
        },
        "showConversion": {
          "type": "boolean",
          "default": true,
          "description": "Show conversion rate between steps"
        }
      },
      "examples": [
        {
          "name": "Sales funnel",
          "code": "<FunnelProgress\n  steps={[\n    { label: \"Visitantes\", value: 1000 },\n    { label: \"Leads\", value: 250 },\n    { label: \"Conversas\", value: 80 },\n    { label: \"Vendas\", value: 25 },\n  ]}\n/>"
        }
      ],
      "useWhen": ["Conversion tracking", "Pipeline stages", "Step completion"]
    },

    "Skeleton": {
      "path": "ui/Skeleton.tsx",
      "description": "Loading placeholder with variants for different content",
      "category": "feedback",
      "subComponents": ["SkeletonText", "SkeletonCard", "SkeletonTable", "SkeletonStatCard", "SkeletonAvatar"],
      "props": {
        "variant": {
          "type": "enum",
          "options": ["text", "circular", "rectangular", "rounded"],
          "default": "text"
        },
        "animation": {
          "type": "enum",
          "options": ["pulse", "wave", "none"],
          "default": "pulse"
        },
        "width": { "type": "string | number" },
        "height": { "type": "string | number" }
      },
      "examples": [
        {
          "name": "Text lines",
          "code": "<SkeletonText lines={3} />"
        },
        {
          "name": "Avatar",
          "code": "<SkeletonAvatar size=\"lg\" />"
        },
        {
          "name": "Card",
          "code": "<SkeletonCard hasHeader hasFooter />"
        }
      ],
      "useWhen": ["Loading states", "Content placeholders", "Async data loading"]
    },

    "GradeBadge": {
      "path": "ui/GradeBadge.tsx",
      "description": "Letter grade indicator (A-F) with semantic colors",
      "category": "data-display",
      "subComponents": ["GradeBadgeWithLabel", "GradeScalePreview"],
      "props": {
        "grade": {
          "type": "enum",
          "options": ["A", "B", "C", "D", "F"],
          "required": true
        },
        "size": {
          "type": "enum",
          "options": ["xs", "sm", "md", "lg", "xl", "2xl"],
          "default": "md"
        },
        "shape": {
          "type": "enum",
          "options": ["circle", "rounded", "square"],
          "default": "circle"
        },
        "variant": {
          "type": "enum",
          "options": ["solid", "ring", "glow", "glossy"],
          "default": "solid"
        },
        "pulse": {
          "type": "boolean",
          "default": false,
          "description": "Pulse animation for critical grades (D, F)"
        }
      },
      "utilities": {
        "scoreToGrade": "scoreToGrade(85) → 'A' - Convert 0-100 score to grade",
        "getGradeInfo": "getGradeInfo('A') → { bg, text, label } - Get grade styling info"
      },
      "examples": [
        {
          "name": "Grade badges",
          "code": "<GradeBadge grade=\"A\" />\n<GradeBadge grade=\"C\" variant=\"glow\" />\n<GradeBadge grade=\"F\" pulse />"
        },
        {
          "name": "With label",
          "code": "<GradeBadgeWithLabel grade=\"B\" label=\"Bom\" description=\"Acima da média\" />"
        }
      ],
      "useWhen": ["Performance scores", "Quality ratings", "Health indicators"]
    },

    "ScoreRing": {
      "path": "ui/ScoreRing.tsx",
      "description": "Circular gauge for displaying scores (0-100) with animated fill",
      "category": "data-display",
      "subComponents": ["ScoreRingCard"],
      "props": {
        "score": {
          "type": "number",
          "required": true,
          "description": "Score value (0-100)"
        },
        "maxScore": { "type": "number", "default": 100 },
        "size": {
          "type": "enum",
          "options": ["sm", "md", "lg", "xl", "2xl"],
          "default": "lg"
        },
        "showValue": { "type": "boolean", "default": true },
        "showMax": { "type": "boolean", "default": true },
        "showGrade": { "type": "boolean", "default": false },
        "color": {
          "type": "enum",
          "options": ["critical", "warning", "attention", "good", "excellent", "brand"],
          "description": "Force color (auto-calculated from score if not set)"
        },
        "glow": { "type": "boolean", "default": true },
        "animated": { "type": "boolean", "default": true },
        "subtitle": { "type": "string" }
      },
      "examples": [
        {
          "name": "Growth score",
          "code": "<ScoreRing score={72} showGrade subtitle=\"Instagram Growth\" />"
        },
        {
          "name": "In card",
          "code": "<ScoreRingCard\n  score={85}\n  title=\"Growth Score\"\n  showGrade\n  footer={<p>12.5K seguidores</p>}\n/>"
        }
      ],
      "useWhen": ["Growth scores", "Health metrics", "Performance gauges"],
      "dontUseWhen": ["Progress (use Progress)", "Simple percentages"]
    },

    "InsightCard": {
      "path": "ui/InsightCard.tsx",
      "description": "Tips, recommendations, and actionable insights",
      "category": "data-display",
      "subComponents": ["InsightList", "QuickTip", "ComparisonInsights"],
      "props": {
        "type": {
          "type": "enum",
          "options": ["tip", "positive", "negative", "warning", "neutral", "action"],
          "default": "tip"
        },
        "message": {
          "type": "string",
          "required": true
        },
        "title": { "type": "string" },
        "icon": {
          "type": "enum | ReactNode",
          "options": ["lightbulb", "trendUp", "trendDown", "calendar", "clock", "target", "star", "zap", "alert", "check"]
        },
        "action": {
          "type": "{ label: string, onClick: () => void }",
